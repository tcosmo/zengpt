{
    "manifest_version": 3,
    "name": "ZenGPT",
    "version": "0.1.0",
    "description": "Hides ChatGPT responses until they are fully generated.",
    "action": {
        "default_title": "ZenGPT",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*",
                "https://chat.mistral.ai/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle",
            "world": "ISOLATED"
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chat.mistral.ai/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "zen.png"
            ],
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*",
                "https://chat.mistral.ai/*"
            ]
        }
    ]
}