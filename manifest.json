{
    "manifest_version": 3,
    "name": "ZenGPT",
    "version": "0.1.0",
    "description": "Hides ChatGPT responses until they are fully generated.",
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle",
            "world": "MAIN"
        }
    ],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
    ]
}